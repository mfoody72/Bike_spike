<div class="transitions-enabled" id="bikes">
  <% @bikes.each do |bike| %>
    <div class="box panel panel-default">
      <%= link_to (image_tag bike.image.url()), bike %>
      <h2>
        <%= bike.title %>
      </h2>
      <p class="user">
        Submitted by
        <%= bike.user.name %>
      </p>
      <span>
        <i class="fa fa-comments-o"></i>
        <%= bike.comments.count %>
        <div id="starz" class="star-rating" data-score="<%= set_average_rating(bike) %>"></div>
      </span>
    </div>
  <% end %>
</div>

  


<!DOCTYPE html>
<html>
<head>
  <title>BikeSpike</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link href="http://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.1/normalize.min.css" rel="stylesheet"></link>
  <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet"></link>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default">
    <div class="container">
      <div class="navbar-brand">Bikr</div>
        <ul class="nav navbar-nav">
          <li>
            <%= link_to "All Bikes", root_path %>
          </li>
            <% Category.all.each do |category| %>
          <li>
            <%= link_to category.name, bikes_path(category: category.name) %>
          </li>
            <% end %>
        </ul>
        <%= link_to "New bike", new_bike_path, class: "navbar-text navbar-right navbar-link" %>
      </div>
    </div>
  </nav>
  <% if user_signed_in? %>
    <%= link_to current_user.name, edit_user_registration_path %>
    <%= link_to "Add New Bike", new_bike_path, class: "button" %>
  <% else %>
    <%= link_to "Sign in", new_user_session_path %>
    <%= link_to "Sign Up", new_user_registration_path, class: "button" %>
  <% end %>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <div class="container">
      <%= yield %>
   </div> 

</body>

</html>
